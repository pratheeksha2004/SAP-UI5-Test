<mvc:View
    controllerName="com.northwind.app.northwindapp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    id="view1">
    <Page id="page" title="Product List">
        <content>
            <List
                id="productsList"
                headerText="Products"
                items="{products>/products}">
                <items>
                    <ObjectListItem
                        id="productListItem"
                        title="{products>Name}"
                        number="{
                            parts: ['products>Price', 'products>CurrencyCode'],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {
                                showMeasure: false
                            }
                        }"
                        numberUnit="{products>CurrencyCode}"
                        type="Navigation"
                        press=".onListItemPress"
                        highlight="{
                            path: 'products>Stock',
                            formatter: '.formatter.stockState'
                        }">
                        <attributes>
                            <ObjectAttribute id="modelAttribute" text="Model: {products>Model}" />
                            <ObjectAttribute id="stockAttribute" text="Stock Quantity: {products>Stock}" />
                        </attributes>
                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>