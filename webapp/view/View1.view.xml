<mvc:View
    controllerName="com.northwind.app.northwindapp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    
    <Page id="mainPage" title="Northwind Dashboard">
        <content>
            <!-- A FlexBox with a stable ID -->
            <FlexBox
                id="dashboardFlexBox"
                height="100%"
                alignItems="Center"
                justifyContent="Center"
                wrap="Wrap"
                class="sapUiSmallMargin">

                
                <GenericTile
                    id="employeesTile"
                    class="sapUiTinyMargin"
                    header="Employees"
                    subheader="View All Employees"
                    press=".onNavToEmployees">
                    <TileContent id="employeesTileContent">
                        <ImageContent id="employeesTileImage" src="sap-icon://employee-lookup" />
                    </TileContent>
                </GenericTile>

                <!-- The GenericTile for Orders with a stable ID -->
                <GenericTile
                    id="ordersTile"
                    class="sapUiTinyMargin"
                    header="Orders"
                    subheader="View Customer Orders"
                    press=".onNavToOrders">
                    <TileContent id="ordersTileContent">
                        <ImageContent id="ordersTileImage" src="sap-icon://sales-order" />
                    </TileContent>
                </GenericTile>

            </FlexBox>
        </content>
    </Page>
    
</mvc:View>